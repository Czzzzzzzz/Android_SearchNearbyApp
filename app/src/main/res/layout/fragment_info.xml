<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:orientation="vertical"
    android:padding="@dimen/common_margin">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_phone"
            android:autoLink="phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price level"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_price_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="price_level"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Rating"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <RatingBar
                android:id="@+id/info_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Google Page"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_google_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoLink="web"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_margin_small"
        android:paddingBottom="@dimen/common_margin_small">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Website"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoLink="web"/>
    </LinearLayout>

